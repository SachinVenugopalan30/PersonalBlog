---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation';
import PageTransition from '../components/PageTransition';
---

<Layout title="Resume & Contact - Sachin" description="Get in touch or download my resume to learn more about my experience and skills.">
  <Navigation client:load />
  
  <PageTransition client:load>
    <!-- Hero Section -->
    <section class="relative pt-32 pb-8 px-4 sm:px-6 lg:px-8 min-h-screen flex items-center justify-center">
      <div class="max-w-6xl mx-auto w-full">
          <div class="space-y-6">
            <h1 class="text-5xl sm:text-6xl font-bold leading-tight">
              <span class="block bg-gradient-to-r from-ivory via-ash-gray to-scarlet bg-clip-text text-transparent">
                Resume & Contact
              </span>
            </h1>
            
            <p class="text-xl text-text-secondary max-w-3xl mx-auto leading-relaxed">
              Get in touch or download my resume to learn more about my experience and skills.
            </p>
          </div>
        </div>
        
        <!-- Main Content Grid -->
        <div class="max-w-6xl mx-auto">
        <div class="grid lg:grid-cols-2 gap-8">
          
          <!-- Resume Section -->
          <div class="glass rounded-2xl p-8 card-hover">
            <h2 class="text-3xl font-bold text-ivory mb-8 flex items-center gap-3">
              <div class="w-10 h-10 bg-gradient-to-r from-scarlet to-ash-gray rounded-full flex items-center justify-center">
                <svg class="w-5 h-5 text-ivory" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M4 4a2 2 0 012-2h4.586A2 2 0 0112 2.586L15.414 6A2 2 0 0116 7.414V16a2 2 0 01-2 2H6a2 2 0 01-2-2V4zm2 6a1 1 0 011-1h6a1 1 0 110 2H7a1 1 0 01-1-1zm1 3a1 1 0 100 2h6a1 1 0 100-2H7z" clip-rule="evenodd" />
                </svg>
              </div>
              Resume
            </h2>
            
            <div class="text-center space-y-6">
              <div class="glass p-8 rounded-xl border border-scarlet/20">
                <div class="space-y-4">
                  <div class="w-20 h-20 bg-gradient-to-br from-scarlet/20 to-ash-gray/20 rounded-2xl flex items-center justify-center mx-auto">
                    <svg class="w-10 h-10 text-scarlet animate-pulse" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M4 4a2 2 0 012-2h4.586A2 2 0 0112 2.586L15.414 6A2 2 0 0116 7.414V16a2 2 0 01-2 2H6a2 2 0 01-2-2V4zm2 6a1 1 0 011-1h6a1 1 0 110 2H7a1 1 0 01-1-1zm1 3a1 1 0 100 2h6a1 1 0 100-2H7z" clip-rule="evenodd" />
                    </svg>
                  </div>
                  
                  <h3 class="text-xl font-bold text-ivory">Professional Resume</h3>
                  
                  <p class="text-text-secondary leading-relaxed">
                    Download my comprehensive resume featuring detailed experience, 
                    technical skills, education, and notable projects.
                  </p>
                  
                  <div class="space-y-3 pt-4">
                    <div class="flex items-center justify-between text-sm">
                      <span class="text-text-secondary">Last Updated:</span>
                      <span class="text-scarlet font-semibold">December 2024</span>
                    </div>
                    
                    <div class="flex items-center justify-between text-sm">
                      <span class="text-text-secondary">Format:</span>
                      <span class="text-ash-gray font-semibold">PDF</span>
                    </div>
                    
                    <div class="flex items-center justify-between text-sm">
                      <span class="text-text-secondary">File Size:</span>
                      <span class="text-air-superiority-blue font-semibold">~2.5 MB</span>
                    </div>
                  </div>
                </div>
              </div>
              
              <button class="btn-primary w-full group">
                <svg class="w-5 h-5 group-hover:animate-bounce" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M3 17a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm3.293-7.707a1 1 0 011.414 0L9 10.586V3a1 1 0 112 0v7.586l1.293-1.293a1 1 0 111.414 1.414l-3 3a1 1 0 01-1.414 0l-3-3a1 1 0 010-1.414z" clip-rule="evenodd" />
                </svg>
                <span>Download Resume PDF</span>
              </button>
            </div>
          </div>

          <!-- Contact Section -->
          <div class="glass rounded-2xl p-8 card-hover">
            <h2 class="text-3xl font-bold text-ivory mb-8 flex items-center gap-3">
              <div class="w-10 h-10 bg-gradient-to-r from-ash-gray to-air-superiority-blue rounded-full flex items-center justify-center">
                <svg class="w-5 h-5 text-ivory" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z" />
                  <path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z" />
                </svg>
              </div>
              Get In Touch
            </h2>
            
            <!-- Contact Form -->
            <form class="space-y-6" id="contactForm">
              <div class="space-y-4">
                <div>
                  <label for="name" class="block text-sm font-semibold text-ash-gray mb-2">
                    Name *
                  </label>
                  <input
                    type="text"
                    id="name"
                    name="name"
                    required
                    class="w-full px-4 py-3 bg-raisin-black/50 border border-ivory/20 rounded-lg text-ivory placeholder-text-secondary/60 focus:outline-none focus:ring-2 focus:ring-scarlet focus:border-scarlet transition-all duration-300"
                    placeholder="Your Name"
                  />
                </div>
                
                <div>
                  <label for="email" class="block text-sm font-semibold text-ash-gray mb-2">
                    Email *
                  </label>
                  <input
                    type="email"
                    id="email"
                    name="email"
                    required
                    class="w-full px-4 py-3 bg-raisin-black/50 border border-ivory/20 rounded-lg text-ivory placeholder-text-secondary/60 focus:outline-none focus:ring-2 focus:ring-scarlet focus:border-scarlet transition-all duration-300"
                    placeholder="your.email@example.com"
                  />
                </div>
                
                <div>
                  <label for="subject" class="block text-sm font-semibold text-ash-gray mb-2">
                    Subject
                  </label>
                  <input
                    type="text"
                    id="subject"
                    name="subject"
                    class="w-full px-4 py-3 bg-raisin-black/50 border border-ivory/20 rounded-lg text-ivory placeholder-text-secondary/60 focus:outline-none focus:ring-2 focus:ring-scarlet focus:border-scarlet transition-all duration-300"
                    placeholder="Project Collaboration"
                  />
                </div>
                
                <div>
                  <label for="message" class="block text-sm font-semibold text-ash-gray mb-2">
                    Message *
                  </label>
                  <textarea
                    id="message"
                    name="message"
                    rows="5"
                    required
                    class="w-full px-4 py-3 bg-raisin-black/50 border border-ivory/20 rounded-lg text-ivory placeholder-text-secondary/60 focus:outline-none focus:ring-2 focus:ring-scarlet focus:border-scarlet transition-all duration-300 resize-none"
                    placeholder="Tell me about your project or idea..."
                  ></textarea>
                </div>
              </div>
              
              <button
                type="submit"
                class="btn-primary w-full group"
              >
                <svg class="w-5 h-5 group-hover:rotate-12 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8" />
                </svg>
                <span>Send Message</span>
              </button>
            </form>
          </div>
        </div>
      </div>
    </section>

      </div>
    </section>

    <!-- Connect Section -->
    <section class="py-12 px-4 sm:px-6 lg:px-8 min-h-screen flex items-center justify-center">
      <div class="max-w-4xl mx-auto">
        <div class="glass rounded-2xl p-8 lg:p-12 text-center">
          <h2 class="text-3xl font-bold text-ivory mb-8">Let's Connect</h2>
          
          <p class="text-lg text-text-secondary mb-12 max-w-2xl mx-auto">
            I'm always interested in hearing about new opportunities, collaborating on exciting projects, 
            or simply having a chat about technology and photography.
          </p>
          
          <div class="grid grid-cols-2 md:grid-cols-4 gap-6">
            <a 
              href="mailto:sachin@example.com" 
              class="group flex flex-col items-center p-6 glass rounded-xl hover:bg-scarlet/10 hover:border-scarlet/30 transition-all duration-300 border border-transparent"
            >
              <div class="w-12 h-12 bg-scarlet/20 rounded-full flex items-center justify-center mb-3 group-hover:scale-110 transition-transform duration-300">
                <svg class="w-6 h-6 text-scarlet" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z" />
                  <path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z" />
                </svg>
              </div>
              <span class="text-sm font-medium text-ivory group-hover:text-scarlet transition-colors duration-300">Email</span>
            </a>
            
            <a 
              href="https://linkedin.com/in/sachinvenugopalan" 
              target="_blank" 
              rel="noopener noreferrer"
              class="group flex flex-col items-center p-6 glass rounded-xl hover:bg-air-superiority-blue/10 hover:border-air-superiority-blue/30 transition-all duration-300 border border-transparent"
            >
              <div class="w-12 h-12 bg-air-superiority-blue/20 rounded-full flex items-center justify-center mb-3 group-hover:scale-110 transition-transform duration-300">
                <svg class="w-6 h-6 text-air-superiority-blue" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.338 16.338H13.67V12.16c0-.995-.017-2.277-1.387-2.277-1.39 0-1.601 1.086-1.601 2.207v4.248H8.014v-8.59h2.559v1.174h.037c.356-.675 1.227-1.387 2.526-1.387 2.703 0 3.203 1.778 3.203 4.092v4.711zM5.005 6.575a1.548 1.548 0 11-.003-3.096 1.548 1.548 0 01.003 3.096zm-1.337 9.763H6.34v-8.59H3.667v8.59zM17.668 1H2.328C1.595 1 1 1.581 1 2.298v15.403C1 18.418 1.595 19 2.328 19h15.34c.734 0 1.332-.582 1.332-1.299V2.298C19 1.581 18.402 1 17.668 1z" clip-rule="evenodd" />
                </svg>
              </div>
              <span class="text-sm font-medium text-ivory group-hover:text-air-superiority-blue transition-colors duration-300">LinkedIn</span>
            </a>
            
            <a 
              href="https://github.com/SachinVenugopalan30" 
              target="_blank" 
              rel="noopener noreferrer"
              class="group flex flex-col items-center p-6 glass rounded-xl hover:bg-ash-gray/10 hover:border-ash-gray/30 transition-all duration-300 border border-transparent"
            >
              <div class="w-12 h-12 bg-ash-gray/20 rounded-full flex items-center justify-center mb-3 group-hover:scale-110 transition-transform duration-300">
                <svg class="w-6 h-6 text-ash-gray" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 0C4.477 0 0 4.484 0 10.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0110 4.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.203 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.942.359.31.678.921.678 1.856 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0020 10.017C20 4.484 15.522 0 10 0z" clip-rule="evenodd" />
                </svg>
              </div>
              <span class="text-sm font-medium text-ivory group-hover:text-ash-gray transition-colors duration-300">GitHub</span>
            </a>
            
            <a 
              href="https://instagram.com/yourusername" 
              target="_blank" 
              rel="noopener noreferrer"
              class="group flex flex-col items-center p-6 glass rounded-xl hover:bg-ivory/10 hover:border-ivory/30 transition-all duration-300 border border-transparent"
            >
              <div class="w-12 h-12 bg-ivory/20 rounded-full flex items-center justify-center mb-3 group-hover:scale-110 transition-transform duration-300">
                <svg class="w-6 h-6 text-ivory" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M12.017 0C5.396 0 .029 5.367.029 11.987c0 5.079 3.158 9.417 7.618 11.024-.105-.949-.199-2.403.041-3.439.219-.937 1.406-5.957 1.406-5.957s-.359-.72-.359-1.781c0-1.663.967-2.911 2.168-2.911 1.024 0 1.518.769 1.518 1.688 0 1.029-.653 2.567-.992 3.992-.285 1.193.6 2.165 1.775 2.165 2.128 0 3.768-2.245 3.768-5.487 0-2.861-2.063-4.869-5.008-4.869-3.41 0-5.409 2.562-5.409 5.199 0 1.033.394 2.143.889 2.749.099.120.112.225.085.345-.09.375-.293 1.199-.334 1.363-.053.225-.172.271-.402.165-1.495-.69-2.433-2.878-2.433-4.646 0-3.776 2.748-7.252 7.92-7.252 4.158 0 7.392 2.967 7.392 6.923 0 4.135-2.607 7.462-6.233 7.462-1.214 0-2.357-.629-2.747-1.378l-.748 2.853c-.271 1.043-1.002 2.35-1.492 3.146C9.57 23.812 10.763 24.009 12.017 24.009c6.624 0 11.99-5.367 11.99-11.988C24.007 5.367 18.641.001.012.001z"/>
                </svg>
              </div>
              <span class="text-sm font-medium text-ivory group-hover:text-ivory transition-colors duration-300">Instagram</span>
            </a>
          </div>
          
          <div class="mt-12 p-6 bg-gradient-to-r from-scarlet/10 to-ash-gray/10 rounded-xl border border-scarlet/20">
            <p class="text-text-secondary text-sm leading-relaxed">
              <span class="text-scarlet font-semibold">Quick Response:</span> I typically respond to emails within 24 hours. 
              For urgent matters, feel free to reach out on LinkedIn for faster communication.
            </p>
          </div>
        </div>
      </div>
    </section>
  </PageTransition>
</Layout>

<script>
  // Contact form handling
  document.getElementById('contactForm')?.addEventListener('submit', function(e) {
    e.preventDefault();
    
    // Get form data
    const formData = new FormData(this as HTMLFormElement);
    const name = formData.get('name') as string;
    const email = formData.get('email') as string;
    const subject = formData.get('subject') as string;
    const message = formData.get('message') as string;
    
    // Simple validation
    if (!name || !email || !message) {
      alert('Please fill in all required fields.');
      return;
    }
    
    // Here you would typically send the form data to your backend
    // For now, we'll just show a success message
    alert('Thank you for your message! I\'ll get back to you soon.');
    
    // Reset form
    (this as HTMLFormElement).reset();
  });
</script>
